<h2>
  Name: <%= session[:name] %>
</h2>

<%= form_tag(save_path, :method => "get") do %>
  <%= label_tag(:q, "Set name in session:") %>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Set") %>
<% end %>

<br/>

<p>
  <%= link_to "Clear session", clear_path %> |
  <%= link_to "Refresh page", root_path %>
</p>

<br/> <br/> <br/>
<hr/>
<%= ap(session, multiline: false, html: true).html_safe %>
